@{
    ViewData["Title"] = "Reporte de Tracking";
}

<style>
    /* Separación del título */
    .page-header {
        margin-bottom: 1.5rem; /* agrega espacio debajo del título */
    }
</style>

<!-- Título principal de la pantalla -->
<div class="page-header">
    <h2 class="m-0">@ViewData["Title"]</h2>
    <div></div>
</div>

<!-- Campo para digitar el ID de la solicitud a consultar -->
<div class="card p-3 mb-3 rounded-2xl shadow-soft">
    <div class="row g-3 align-items-end">
        <div class="col-sm-6 col-md-4">
            <label for="gestionId" class="form-label">ID de Solicitud</label>
            <input id="gestionId" class="form-control" placeholder="Ingrese el ID de la solicitud" />
        </div>

        <!-- Botón para consultar el historial -->
        <div class="col-sm-6 col-md-auto">
            <button id="btnConsultar" class="btn btn-primary btn-new">Consultar</button>
        </div>
    </div>
</div>

<!-- Tabla donde se mostrará el tracking completo -->
<div class="card-table">
    <div class="table-wrapper">
        <table id="tablaTracking" class="table table-hover align-middle m-0">
            <thead>
                <tr>
                    <th>Solicitud</th>
                    <th>Acción</th>
                    <th>Comentario</th>
                    <th>Estado</th>
                    <th>Usuario</th>
                    <th>Fecha</th>
                </tr>
            </thead>
        </table>
    </div>
</div>

@section Scripts {
    <!-- Validaciones generales -->
    <partial name="_ValidationScriptsPartial" />

    <!-- Librería DataTables para mostrar los datos -->
    <link rel="stylesheet" href="https://cdn.datatables.net/1.13.8/css/jquery.dataTables.min.css" />
    <script src="https://cdn.datatables.net/1.13.8/js/jquery.dataTables.min.js"></script>

    <!-- Script principal del módulo de reporte -->
    <script src="~/js/flujo-reporte.js" asp-append-version="true"></script>
}
