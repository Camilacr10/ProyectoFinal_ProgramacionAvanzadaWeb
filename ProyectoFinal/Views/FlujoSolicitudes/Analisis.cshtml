@{
    ViewData["Title"] = "Análisis de Solicitudes";
}

<!-- Título principal de la página -->
<div class="page-header">
    <h2 class="m-0">@ViewData["Title"]</h2>
    <div></div>
</div>

<!-- Token antiforgery (necesario para llamadas POST seguras desde JS) -->
<form id="__af_token_holder" method="post" class="d-none">
    @Html.AntiForgeryToken()
</form>

<!-- Tabla principal del módulo de análisis -->
<div class="card-table">
    <div class="table-wrapper">
        <table id="tablaAnalisis" class="table table-hover align-middle m-0">
            <thead>
                <tr>
                    <th>#</th>
                    <th>Cliente</th>
                    <th>Monto</th>
                    <th>Estado</th>
                    <th class="table-actions">Acciones</th>
                </tr>
            </thead>
        </table>
    </div>
</div>

@section Scripts {
    <!-- Scripts de validación -->
    <partial name="_ValidationScriptsPartial" />

    <!-- Librería DataTables (para mostrar los datos con paginación y formato) -->
    <link rel="stylesheet" href="https://cdn.datatables.net/1.13.8/css/jquery.dataTables.min.css" />
    <script src="https://cdn.datatables.net/1.13.8/js/jquery.dataTables.min.js"></script>

    <!-- Librería SweetAlert2 (para alertas y confirmaciones modernas) -->
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>

    <!-- Script JS del módulo (controla eventos, AJAX y recargas) -->
    <script src="~/js/flujo-analisis.js" asp-append-version="true"></script>
}
