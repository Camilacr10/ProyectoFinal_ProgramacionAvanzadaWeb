@{
    ViewData["Title"] = "Aprobaciones de Solicitudes";
    bool puedeAcciones = User.IsInRole("Gestor") || User.IsInRole("Admin");
}

<div class="d-flex justify-content-between align-items-center mb-3">
    <h3>@ViewData["Title"]</h3>
</div>

<table id="tablaAprob" class="table table-striped">
    <thead>
        <tr>
            <th>#</th>
            <th>Cliente</th>
            <th>Monto</th>
            <th>Estado</th>
            <th>Acciones</th>
        </tr>
    </thead>
</table>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    @await Html.PartialAsync("_PermsScript")
    <script>
        window.AppPerms = window.AppPerms || {};
        window.AppPerms.canAprobacionesAcciones = @puedeAcciones.ToString().ToLowerInvariant();
    </script>
    <script src="~/js/common.js" asp-append-version="true"></script>
    <script src="~/js/flujo-aprobaciones.js" asp-append-version="true"></script>
}