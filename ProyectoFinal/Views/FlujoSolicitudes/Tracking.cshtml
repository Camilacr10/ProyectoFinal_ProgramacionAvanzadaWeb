@model ProyectoFinal.Controllers.FlujoSolicitudesController.TrackingPageVm
@{
    ViewData["Title"] = "Historial de Solicitud";
}

<div class="d-flex justify-content-between align-items-center mb-3">
    <h3>@ViewData["Title"]</h3>
    <a asp-action="Analisis" class="btn btn-secondary">Volver</a>
</div>

<div class="mb-3">
    <label class="form-label">ID de Solicitud</label>
    <input id="gestionId" class="form-control" value="@Model.IdSolicitud" readonly />
</div>

<button id="btnConsultar" class="btn btn-primary mb-3">Cargar Historial</button>

<table id="tablaTracking" class="table table-striped">
    <thead>
        <tr>
            <th>Solicitud</th>
            <th>Acción</th>
            <th>Comentario</th>
            <th>Estado</th>
            <th>Usuario</th>
            <th>Fecha</th>
        </tr>
    </thead>
</table>

@section Scripts {
    <script src="~/js/common.js" asp-append-version="true"></script>
    <script src="~/js/flujo-reporte.js" asp-append-version="true"></script>
    <script>
        $(document).ready(() => $('#btnConsultar').click());
    </script>
}