@model ProyectoFinal.Controllers.FlujoSolicitudesController.TrackingPageVm
@{
    ViewData["Title"] = "Historial de Solicitud";
    var referrer = Context.Request.Headers["Referer"].ToString();
    var fallbackUrl = Url.Action("Analisis", "FlujoSolicitudes"); // si no hay historial ni referer
    var backUrl = !string.IsNullOrWhiteSpace(referrer) ? referrer : fallbackUrl;
}

<!-- Encabezado con título y botón para volver -->
<div class="page-header">
    <h2 class="m-0">@ViewData["Title"]</h2>
    <div class="d-flex gap-2">
        <a href="@backUrl"
           class="btn btn-outline-secondary"
           onclick="if (history.length > 1) { history.back(); return false; }">
            ← Volver
        </a>
    </div>
</div>

<!-- Campo con el ID de la solicitud (solo lectura) -->
<div class="card p-3 mb-3 rounded-2xl shadow-soft">
    <div class="row g-3">
        <div class="col-sm-6 col-md-4">
            <label class="form-label">ID de Solicitud</label>
            <input id="gestionId" class="form-control" value="@Model.IdSolicitud" readonly />
        </div>

        <!-- Botón para consultar el historial (mismo estilo que el reporte) -->
        <div class="col-md-auto d-flex align-items-end">
            <button id="btnConsultar" class="btn btn-primary btn-new">Consultar</button>
        </div>
    </div>
</div>

<!-- Tabla que mostrará todo el seguimiento (tracking) -->
<div class="card-table">
    <div class="table-wrapper">
        <table id="tablaTracking" class="table table-hover align-middle m-0">
            <thead>
                <tr>
                    <th>Solicitud</th>
                    <th>Acción</th>
                    <th>Comentario</th>
                    <th>Estado</th>
                    <th>Usuario</th>
                    <th>Fecha</th>
                </tr>
            </thead>
        </table>
    </div>
</div>

@section Scripts {
    <!-- Librería DataTables (para paginar y mostrar los registros) -->
    <link rel="stylesheet" href="https://cdn.datatables.net/1.13.8/css/jquery.dataTables.min.css" />
    <script src="https://cdn.datatables.net/1.13.8/js/jquery.dataTables.min.js"></script>

    <!-- Script que gestiona el reporte del tracking -->
    <script src="~/js/flujo-reporte.js" asp-append-version="true"></script>

    <!-- Ejecuta automáticamente la carga del historial al abrir -->
    <script>$(document).ready(() => $('#btnConsultar').click());</script>
}
