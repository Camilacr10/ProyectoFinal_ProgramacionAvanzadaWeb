@{
    ViewData["Title"] = "SGC · Inicio";
}

<style>
    .hero-sgc {
        background: linear-gradient(135deg, #0d6efd 0%, #6610f2 100%);
        color: #fff;
        border-radius: 1rem;
        padding: 2.5rem 1.75rem;
        box-shadow: 0 0.5rem 1.25rem rgba(13,110,253,.25);
    }

        .hero-sgc h1 {
            font-weight: 700;
            letter-spacing: .2px;
        }

    .quick-card {
        transition: transform .12s ease, box-shadow .12s ease;
        border: 1px solid rgba(0,0,0,.06);
        border-radius: 1rem;
    }

        .quick-card:hover {
            transform: translateY(-2px);
            box-shadow: 0 .75rem 1.25rem rgba(0,0,0,.08);
        }

    .kpi {
        border-radius: 1rem;
        background: #fff;
        border: 1px solid rgba(0,0,0,.06);
    }

    .soft-badge {
        background: rgba(255,255,255,.25);
        color: #fff;
    }
</style>

<div class="container py-4">
    <!-- HERO PRINCIPAL -->
    <div class="hero-sgc mb-4">
        <div class="row align-items-center g-3">
            <div class="col-lg-8">
                <span class="badge soft-badge mb-2">Sistema de Gestión del Crédito (SGC)</span>
                <h1 class="mb-2">Seguimiento de Gestiones de Crédito</h1>
                <p class="mb-0">Bienvenido al panel general. Desde aquí podrás acceder a los módulos según tu rol.</p>
            </div>
        </div>
    </div>

    <!-- Accesos rápidos -->
    <h5 class="mb-3">Accesos rápidos</h5>
    <div class="row g-3 mb-4">

        <!-- CLIENTES: visible para todos -->
        <div class="col-sm-6 col-lg-3">
            <a class="text-decoration-none" asp-controller="Clientes" asp-action="Index">
                <div class="p-3 quick-card h-100 bg-white">
                    <div class="fw-semibold mb-1">Clientes</div>
                    <div class="text-muted small">Crear, editar, consultar y eliminar clientes.</div>
                </div>
            </a>
        </div>

        <!-- SOLICITUDES: ServicioAlCliente o Administrador -->
        @if (User.IsInRole("ServicioAlCliente") || User.IsInRole("Administrador"))
        {
            <div class="col-sm-6 col-lg-3">
                <a class="text-decoration-none" asp-controller="Solicitudes" asp-action="Index">
                    <div class="p-3 quick-card h-100 bg-white">
                        <div class="fw-semibold mb-1">Solicitudes</div>
                        <div class="text-muted small">Registro y reglas de negocio de créditos.</div>
                    </div>
                </a>
            </div>
        }

        <!-- USUARIOS: solo Administrador -->
        @if (User.IsInRole("Administrador"))
        {
            <div class="col-sm-6 col-lg-3">
                <a class="text-decoration-none" asp-controller="Usuario" asp-action="Index">
                    <div class="p-3 quick-card h-100 bg-white">
                        <div class="fw-semibold mb-1">Usuarios</div>
                        <div class="text-muted small">Gestión de usuarios y roles del sistema.</div>
                    </div>
                </a>
            </div>
        }

        <!-- SEGUIMIENTO: solo Analista o Administrador -->
        @if (User.IsInRole("Analista") || User.IsInRole("Administrador"))
        {
            <div class="col-sm-6 col-lg-3">
				<a class="text-decoration-none" asp-controller="FlujoSolicitudes" asp-action="Reporte">
                <div class="p-3 quick-card h-100 bg-white">
                    <div class="fw-semibold mb-1">Reportes</div>
                    <div class="text-muted small">Indicadores y métricas de gestión.</div>
                </div>
				</a>
            </div>
        }
    </div>

</div>
