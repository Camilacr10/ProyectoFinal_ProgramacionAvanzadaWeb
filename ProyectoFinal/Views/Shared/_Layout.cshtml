<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - SGC</title>

    <!-- Estilos principales -->
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body>
    <!-- Barra superior -->
    <nav class="navbar navbar-expand-lg navbar-light bg-light">
        <div class="container-fluid">
            <!-- Logo del sistema -->
            <a class="navbar-brand" asp-controller="Home" asp-action="Index">SGC</a>

            <div class="collapse navbar-collapse">
                <ul class="navbar-nav me-auto">

                    <!-- Clientes -->
                    <li class="nav-item">
                        <a class="nav-link" asp-controller="Clientes" asp-action="Index">Clientes</a>
                    </li>

                    <!-- Solicitudes -->
                    @if (User.IsInRole("ServicioAlCliente") || User.IsInRole("Administrador"))
                    {
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Solicitudes" asp-action="Index">Solicitudes</a>
                        </li>
                    }

                    <!-- Análisis -->
                    @if (User.IsInRole("Analista") || User.IsInRole("Administrador"))
                    {
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="FlujoSolicitudes" asp-action="Analisis">Análisis</a>
                        </li>
                    }

                    <!-- Aprobaciones -->
                    @if (User.IsInRole("Gestor") || User.IsInRole("Administrador"))
                    {
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="FlujoSolicitudes" asp-action="Aprobaciones">Aprobaciones</a>
                        </li>
                    }

                    <!-- Reporte -->
                    @if (User.IsInRole("Analista") || User.IsInRole("Gestor") || User.IsInRole("Administrador"))
                    {
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="FlujoSolicitudes" asp-action="Reporte">Reporte</a>
                        </li>
                    }

                    <!-- Usuarios -->
                    @if (User.IsInRole("Administrador"))
                    {
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Usuario" asp-action="Index">Usuarios</a>
                        </li>
                    }
                </ul>

                <!-- Usuario autenticado -->
                <ul class="navbar-nav">
                    @if (User.Identity.IsAuthenticated)
                    {
                        <li class="nav-item">
                            <span class="nav-link">Hola, @User.Identity.Name</span>
                        </li>
                        <li class="nav-item">
                            <form method="post" asp-controller="Login" asp-action="Logout">
                                <button type="submit" class="btn btn-link nav-link">Cerrar sesión</button>
                            </form>
                        </li>
                    }
                </ul>
            </div>
        </div>
    </nav>

    <!-- Contenido principal -->
    <div class="container mt-3">
        @RenderBody()
    </div>

    <!-- Scripts -->
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js"></script>

    @RenderSection("Scripts", required: false)
</body>
</html>