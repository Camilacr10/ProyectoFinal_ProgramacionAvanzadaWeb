@using Microsoft.EntityFrameworkCore
@using ProyectoFinalDAL.Entidades
@using Microsoft.AspNetCore.Identity
@inject UserManager<ApplicationUser> UserManager

@{
    ViewData["Title"] = "Usuarios";
    var usuarios = await UserManager.Users.ToListAsync();
}

<div class="page-header">
    <h2 class="m-0">@ViewData["Title"]</h2>
    <div class="text-end">
        <a asp-controller="Home" asp-action="Index" class="btn btn-outline-secondary">← Volver</a>
        <a asp-controller="Usuario" asp-action="Create" class="btn btn-primary hover-raise">Crear Usuario</a>
    </div>
</div>

<div class="card-table">
    <div class="table-wrapper">
        <table class="table table-hover align-middle m-0">
            <thead>
                <tr>
                    <th>Nombre completo</th>
                    <th>Email</th>
                    <th>Roles</th>
                    <th class="table-actions">Acciones</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var user in usuarios)
                {
                    var roles = await UserManager.GetRolesAsync(user);
                    <tr>
                        <td>@user.NombreCompleto</td>
                        <td>@user.Email</td>
                        <td>@string.Join(", ", roles)</td>
                        <td class="table-actions">
                            <a asp-controller="Usuario" asp-action="Edit" asp-route-id="@user.Id" class="btn btn-sm btn-outline-primary">Editar</a>
                            <a asp-controller="Usuario" asp-action="Delete" asp-route-id="@user.Id" class="btn btn-sm btn-outline-danger">Eliminar</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
