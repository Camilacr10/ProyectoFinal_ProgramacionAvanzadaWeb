@using Microsoft.EntityFrameworkCore
@using ProyectoFinalDAL.Entidades
@using Microsoft.AspNetCore.Identity
@inject UserManager<ApplicationUser> UserManager

@{
    ViewData["Title"] = "Usuarios";
    var usuarios = await UserManager.Users.ToListAsync();
}

<h2>Listado de Usuarios</h2>

<a asp-controller="Usuario" asp-action="Create" class="btn btn-success mb-3">Crear Usuario</a>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Nombre completo</th>
            <th>Email</th>
            <th>Roles</th>
            <th>Acciones</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var user in usuarios)
        {
            var roles = await UserManager.GetRolesAsync(user);
            <tr>
                <td>@user.NombreCompleto</td>
                <td>@user.Email</td>
                <td>@string.Join(", ", roles)</td>
                <td>
                    <a asp-controller="Usuario" asp-action="Edit" asp-route-id="@user.Id" class="btn btn-sm btn-primary">Editar</a>
                    <a asp-controller="Usuario" asp-action="Delete" asp-route-id="@user.Id" class="btn btn-sm btn-danger">Eliminar</a>
                </td>
            </tr>
        }
    </tbody>
</table>
