@model ProyectoFinalBLL.Dtos.UsuarioDto

@{
    ViewData["Title"] = "Eliminar usuario";
}

<h2 class="mb-3 text-danger">Eliminar usuario</h2>
<p>¿Seguro que deseas eliminar este usuario?</p>

<div class="card mb-3">
    <div class="card-body">
        <dl class="row">
            <dt class="col-sm-3">Nombre</dt>
            <dd class="col-sm-9">@Model.Nombre</dd>

            <dt class="col-sm-3">Apellido</dt>
            <dd class="col-sm-9">@Model.Apellido</dd>

            <dt class="col-sm-3">Correo</dt>
            <dd class="col-sm-9">@Model.Correo</dd>

            <dt class="col-sm-3">Rol</dt>
            <dd class="col-sm-9">@Model.Rol</dd>
        </dl>
    </div>
</div>

<form asp-action="Delete" method="post">
    @Html.AntiForgeryToken()
    <input type="hidden" asp-for="IdUsuario" />
    <button type="submit" class="btn btn-danger">Eliminar</button>
    <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
</form>
