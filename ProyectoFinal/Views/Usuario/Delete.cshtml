@model ProyectoFinal.Controllers.UsuarioViewModel

@{
    ViewData["Title"] = "Eliminar Usuario";
}

<div class="page-header">
    <h2 class="m-0">@ViewData["Title"]</h2>
</div>

<div class="card p-3 rounded-2xl shadow-soft mb-3">
    <div class="alert alert-warning m-0">
        <p class="m-0">¿Está seguro que desea eliminar al usuario <strong>@Model.NombreCompleto</strong>?</p>
    </div>
</div>

<div class="card p-3 rounded-2xl shadow-soft">
    <form asp-action="Delete" method="post">
        <input type="hidden" asp-for="Id" />
        <div class="d-flex gap-2 justify-content-end">
            <button type="submit" class="btn btn-danger">Eliminar</button>
            <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
        </div>
    </form>
</div>
