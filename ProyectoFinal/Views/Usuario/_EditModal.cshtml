@model ProyectoFinal.Controllers.EditUsuarioViewModel

<div class="modal-header">
    <h5 class="modal-title">Editar Usuario</h5>
    <button type="button" class="close" data-bs-dismiss="modal">&times;</button>
</div>

<div class="modal-body">
    <form asp-action="Edit" method="post" id="frmEditModal">
        <input type="hidden" asp-for="Id" />

        <div class="form-group">
            <label>Nombre Completo</label>
            <input asp-for="NombreCompleto" class="form-control" />
            <span asp-validation-for="NombreCompleto" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label>Correo</label>
            <input asp-for="Email" class="form-control" />
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label>Roles</label>
            @foreach (var role in (List<string>)ViewBag.Roles)
            {
                <div class="form-check">
                    <input type="checkbox"
                           name="Roles"
                           value="@role"
                           class="form-check-input"
                           @(Model.Roles != null && Model.Roles.Contains(role) ? "checked" : "") />
                    <label class="form-check-label">@role</label>
                </div>
            }
        </div>

        <button type="submit" class="btn btn-primary mt-2">Actualizar</button>
    </form>
</div>
