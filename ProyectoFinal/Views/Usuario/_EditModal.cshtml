@model ProyectoFinalBLL.DTOs.UsuarioDto

<div class="modal-header">
    <h5 class="modal-title">Editar Usuario</h5>
    <button type="button" class="close" data-bs-dismiss="modal">&times;</button>
</div>
<div class="modal-body">
    <form asp-action="EditModal" method="post" id="frmEditModal">
        <input type="hidden" asp-for="IdUsuario" />
        <div class="form-group">
            <label>Nombre Completo</label>
            <input asp-for="NombreCompleto" class="form-control" />
            <span asp-validation-for="NombreCompleto" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label>Correo</label>
            <input asp-for="Correo" class="form-control" />
            <span asp-validation-for="Correo" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label>Clave</label>
            <input asp-for="Clave" type="password" class="form-control" />
            <span asp-validation-for="Clave" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label>Rol</label>
            <select asp-for="Rol" class="form-control">
                <option value="Admin">Admin</option>
                <option value="Analista">Analista</option>
                <option value="Gestor">Gestor</option>
                <option value="ServicioCliente">Servicio al Cliente</option>
            </select>
            <span asp-validation-for="Rol" class="text-danger"></span>
        </div>
        <button type="submit" class="btn btn-primary mt-2">Actualizar</button>
    </form>
</div>
